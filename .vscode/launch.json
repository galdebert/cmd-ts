{
  "version": "0.2.0",
  "configurations": [
    {
      // https://jestjs.io/docs/troubleshooting
      "name": "debug tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        //"--inspect-brk", // https://jestjs.io/docs/troubleshooting say to use --inspect-brk but it does not seem necessary
        "${workspaceFolder}/node_modules/jest/bin/jest.js",
        //"--testPathPattern=test/ui.test.ts",
        //"--testPathPattern=test/flag.test.ts",
        "--testPathPattern=test/newparser/parser.test.ts",
        "--runInBand",
        "--no-cache",
        //"--watchAll=false"
      ],
      "cwd": "${workspaceFolder}",
      "disableOptimisticBPs": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js",
      ]
    }
  ]
}
